<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dip"
    android:paddingTop="2dip" >

    <com.chocopepper.chococam.util.ImageViewRounded
        android:id="@+id/imgUser"
        android:layout_width="51dip"
        android:layout_height="51dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@+id/relativeIconsAndButtons"
        android:layout_toRightOf="@id/imgUser"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeIconsAndButtons"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp" >

        <TextView
            android:id="@+id/txtFollowFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRequestFriendship"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_response"
            android:focusable="false"
            android:text="@string/delete_friends"
            android:textColor="#9b9b9b"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>