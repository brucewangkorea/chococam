<h1>Users#edit</h1>
<p>Find me in app/views/api/v1/users/edit.html.erb</p>

<%= @user.inspect %>  <br/>

<%= form_for @user, url: api_v1_user_path, :html => {:multipart => true} do |f| %>    
  <p>  
    <%= f.label :name %> <%= f.text_field :name %>  <br />
    <%= f.file_field :avatar %> <br />
    <%= image_tag(@user.avatar.url) %>
  </p>  

  <p><%= f.submit %></p>  
<% end %>  
